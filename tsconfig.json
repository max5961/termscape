{
    "compilerOptions": {
        "outDir": "./dist/",
        "declaration": true,
        "jsx": "react",
        "target": "esnext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "allowJs": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}
